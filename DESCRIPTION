Package: clustra
Version: 0.1.3
Date: 2021-03-29
Title: Clustering Trajectories Anchored at Intervention Time
Authors@R: c(
    person("Ostrouchov", "George", role = c("aut", "cre"), email = 
    "ostrouchovg@ornl.gov"),
    person("Gagnon", "David", role = "aut"),
    person("Gerlovin", "Hanna", role = "aut"),
    person("Chen", "Wei-Chen", role = "ctb"),
    person("Schmidt", "Drew", role = "ctb"))
Depends:
    R (>= 3.5.0)
Imports:
    data.table,
    graphics,
